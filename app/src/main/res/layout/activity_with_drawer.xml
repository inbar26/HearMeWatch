<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:background="@color/white"
            android:elevation="4dp" >

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"/>

            <ImageView
                android:id="@+id/IV_nav_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_sidebar"
                android:layout_marginStart="28dp" />

            <!-- Title + subtitle -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hearmewatch"
                        android:textStyle="bold"
                        android:textColor="#1B1F31"
                        android:textSize="@dimen/text_app_name_title"
                        android:fontFamily="@font/font_app_name"
                        android:layout_gravity="center_vertical"/>

                    <ImageView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:src="@drawable/img_logo"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>
            </FrameLayout>
        </androidx.appcompat.widget.Toolbar>

        <!-- Page -->
        <FrameLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:background="@color/white">

        <!-- NavigationView (drawer) -->
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigation_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            app:headerLayout="@layout/drawer_header_view"
            app:menu="@menu/drawer_menu"
            app:itemVerticalPadding="24dp"/>

        <View
            android:layout_width="220dp"
            android:layout_height="1dp"
            android:background="@color/drawer_line"
            android:layout_gravity="center"/>

        <!-- Sign out button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp">

            <ImageButton
                android:id="@+id/IB_logout_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_logout"
                app:tint="@color/sign_out_icon"
                android:backgroundTint="@color/fui_transparent"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_out"
                android:textColor="@color/sign_out_text"
                android:textStyle="normal"
                android:textSize="@dimen/text_sign_out"/>
        </LinearLayout>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
