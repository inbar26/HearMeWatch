<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="16dp"
    android:layoutDirection="ltr">

    <include
        layout="@layout/page_header_view" />

    <!-- כרטיס זיהוי צלילים -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/frame_white"
        android:padding="20dp">

        <!-- כותרת עם אייקון -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_back" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Real-Time Sound Detection"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#1C1C1E" />

                <TextView
                    android:id="@+id/TV_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status: Service is not running"
                    android:textSize="14sp"
                    android:textColor="#6C757D" />
            </LinearLayout>
        </LinearLayout>

        <!-- תיאור -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Activate sound detection to get alerts for important sounds like alarms or your name being called, with all processing happening in real time."
            android:textSize="14sp"
            android:textColor="#4A4A4A" />

    </LinearLayout>

        <!-- כפתור -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/BTN_start_detection"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:text="Start Sound Detection"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:backgroundTint="#4A90E2"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_radar"
            app:iconGravity="textStart" />

        <!-- טקסט פרטיות -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🔒 Audio is processed in real time and never stored."
            android:textSize="12sp"
            android:textColor="#6C757D"
            android:layout_marginTop="12dp" />

</LinearLayout>
