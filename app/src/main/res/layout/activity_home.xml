<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/home_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="#edf6f9">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/home_toolbar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@android:color/white"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:navigationIcon="@drawable/ic_sidebar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dashboard"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_centerInParent="true"
                    android:translationX="-38dp"
                    android:translationY="-10dp"/>

                <TextView
                    android:id="@+id/toolbar_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voice Recording Assistant"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_below="@id/toolbar_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:translationX="-38dp"
                    android:translationY="-10dp"/>

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/TV_hello_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:hint="Hello "
            android:textColor="#0a0908"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TV_hello_message_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TV_hello_message"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Ready to start recording?"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            android:translationY="-10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="0.2"
            android:gravity="center_horizontal"
            android:orientation="vertical">



                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="180dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/img_logo" />

            <!--            <com.google.android.material.imageview.ShapeableImageView-->
            <!--                android:layout_width="250dp"-->
            <!--                android:layout_height="0dp"-->
            <!--                android:layout_weight="0.5"-->
            <!--                app:srcCompat="@drawable/img_logo_name" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:layout_marginHorizontal="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/BTN_start_recording"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:text="Start Recording"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/buttons"
                android:textColor="@color/text_buttons" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/BTN_stop_recording"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:text="Stop Recording"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/buttons"
                android:textColor="@color/text_buttons" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/BTN_connect_watch"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:text="Connect Watch"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/buttons"
                android:textColor="@color/text_buttons" />
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/home_navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        app:menu="@menu/drawer_menu"
        android:layoutDirection="ltr"/>
</androidx.drawerlayout.widget.DrawerLayout>
