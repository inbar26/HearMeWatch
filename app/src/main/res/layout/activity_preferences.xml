<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f1f1f1"
    android:layoutDirection="ltr">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layoutDirection="ltr">

        <ImageButton
            android:id="@+id/preferences_BTN_back"
            style="@style/Widget.Material3.Button.Icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:iconTint="@null"
            android:backgroundTint="#f5f5f5"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:src="@drawable/ic_back"
            app:iconGravity="textEnd"
            app:iconSize="45dp" />

        <TextView
            android:id="@+id/preferences_TV_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Preferences"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="22dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-light"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#edf6f9"
        android:padding="16dp"
        android:layoutDirection="ltr">

        <!-- Title + Intro Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_preferences"
                android:background="@drawable/circle_purple"
                android:padding="16dp"
                android:contentDescription="Guide Icon"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preferences"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1C1C1E"
                android:layout_marginTop="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose your alert sounds"
                android:textSize="16sp"
                android:textColor="#4A4A4A"
                android:layout_marginTop="4dp" />
        </LinearLayout>



    <FrameLayout
        android:id="@+id/FL_preferences"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="8dp"
        android:background="@drawable/frame_outline"
        android:layoutDirection="ltr"
        android:layout_marginBottom="110dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layoutDirection="ltr"/>

    </LinearLayout>
</LinearLayout>
