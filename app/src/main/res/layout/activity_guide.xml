<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                layout="@layout/page_header_view" />

            <!-- Activating sound detection -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/frame_white"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activating_sound_detection"
                    android:textSize="@dimen/text_step_title"
                    android:textStyle="bold"
                    android:textColor="@color/text_step_title"
                    android:drawableStart="@drawable/ic_radar"
                    android:drawableTint="@color/black"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="12dp" />

                <dev.noash.hearmewatch.Utilities.StepItemView
                    android:id="@+id/guide1_step1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <dev.noash.hearmewatch.Utilities.StepItemView
                    android:id="@+id/guide1_step2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <dev.noash.hearmewatch.Utilities.StepItemView
                    android:id="@+id/guide1_step3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!-- Choosing sound categories -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/frame_white"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/choosing_sound_categories"
                    android:textSize="@dimen/text_step_title"
                    android:textStyle="bold"
                    android:textColor="@color/text_step_name"
                    android:drawableStart="@drawable/ic_preferences"
                    android:drawableTint="@color/black"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="12dp"/>

                <dev.noash.hearmewatch.Utilities.StepItemView
                    android:id="@+id/guide2_step1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <dev.noash.hearmewatch.Utilities.StepItemView
                    android:id="@+id/guide2_step2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <dev.noash.hearmewatch.Utilities.StepItemView
                    android:id="@+id/guide2_step3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/TV_available_categories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_info_box_blue"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:textColor="#1976D2"
                    android:lineSpacingExtra="5dp"/>
            </LinearLayout>

            <!-- Smartwatch Alerts -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/frame_white"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/smartwatch_alerts"
                    android:textSize="@dimen/text_step_title"
                    android:textStyle="bold"
                    android:textColor="@color/text_step_title"
                    android:drawableStart="@drawable/ic_watch"
                    android:drawableTint="@color/black"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/when_a_sound_is_detected_that_matches_your_selected_categories_you_ll_receive_an_instant_alert_on_your_smartwatch_with"
                    android:textSize="@dimen/text_step_name"
                    android:layout_marginBottom="8dp"
                    android:lineSpacingExtra="4dp"/>

                <include
                    layout="@layout/bullet_view"
                    android:id="@+id/bullet1" />

                <include
                    layout="@layout/bullet_view"
                    android:id="@+id/bullet2" />

                <include
                    layout="@layout/bullet_view"
                    android:id="@+id/bullet3" />
            </LinearLayout>

            <!-- Privacy & Security -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/frame_white"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_amp_security"
                    android:textSize="@dimen/text_step_title"
                    android:textStyle="bold"
                    android:textColor="@color/text_step_title"
                    android:drawableStart="@drawable/ic_lock"
                    android:drawableTint="@color/black"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/TV_privacy_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/frame_white"
                    android:textSize="16sp"
                    android:textColor="#1C7D4D"
                    android:lineSpacingExtra="5dp"
                    android:padding="12dp" />
            </LinearLayout>
        </LinearLayout>

</ScrollView>
